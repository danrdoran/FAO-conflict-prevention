# Virtual environments
.venv/
venv/
env/
ENV/

# Python cache
__pycache__/
*.py[cod]
*$py.class
*.so
.Python

# IDE and editor files
.idea/
.vscode/
*.swp
*.swo
*~

# Git
.git/
.gitignore

# Testing and coverage
.pytest_cache/
.coverage
htmlcov/
.tox/
.nox/

# Build artifacts
*.egg-info/
dist/
build/
eggs/
*.egg

# Environment files (secrets should be passed at runtime)
.env
.env.local
*.env

# Jupyter notebooks
*.ipynb
.ipynb_checkpoints/

# OS files
.DS_Store
Thumbs.db

# Logs
*.log
logs/

# Local development files
.streamlit/secrets.toml

# Temporary files
tmp/
temp/
*.tmp

# Deployment files (not needed in container)
deploy.sh
DEPLOYMENT_GUIDE.md
.gcloudignore